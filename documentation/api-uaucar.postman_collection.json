          "name": "login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code é 200\", function () {\r",
                  "    pm.response.to.have.status(200);\r",
                  "});\r",
                  "\r",
                  "if (pm.response.code === 200) {\r",
                  "    const res = pm.response.json();\r",
                  "    if (res.data) {\r",
                  "        pm.environment.set(\"accessToken\", res.data.access_token);\r",
                  "        pm.environment.set(\"deviceToken\", res.data.device_token);\r",
                  "    }\r",
                  "    \r",
                  "    const refreshCookie = pm.cookies.get(\"refresh_token\");\r",
                  "    if (refreshCookie) {\r",
                  "        pm.environment.set(\"refreshToken\", refreshCookie);\r",
                  "    }\r",
                  "}\r",
                  ""
                ],
